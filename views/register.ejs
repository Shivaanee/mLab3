<%- include('header'); -%>
<div class="header">
    <h2>REGISTER</h2>
</div>
  
<form action="/api/register" method="POST">

    <div class="input-group">
        <label>Enter Full Name *</label>
        <input type="text" name="name"
            placeholder="Full Name" required="required" id="contact">
    </div>
    <div class="input-group">
        <label>Enter Society</label>
        <input type="text" name="society"
            placeholder="Society" id="society">
    </div>
    <div class="input-group">
        <label>Enter Address</label>
        <input type="text" name="address"
            placeholder="Address" id="addres">
    </div>
    <div class="input-group">
        <label>Enter ZIP code</label>
        <input type="text" name="ZIP code"
            placeholder="00000" id="zipcode">
    </div>
    <div class="input-group">
        <label>Enter City</label>
        <input type="text" name="city"
            placeholder="City" id="city">
    </div>
    <div class="input-group">
        <label>Enter Phone Number *</label>
        <input type="text" name="phone"
            placeholder="050 123 4567" required="required" id="phone">
    </div>
    <div class="input-group">
        <label>Enter Fax Number</label>
        <input type="text" name="fax"
            placeholder="0123456789" id="fax">
    </div>
    <div class="input-group">
        <label>Enter Username *</label>
        <input type="text" name="username"
            placeholder="Username" required="required" id="username">
    </div>
    <div class="input-group">
        <label>Enter Password *</label>
        <input type="password" name="password" required="required" id="password">
    </div>
    <div class="input-group">
        <label>Confirm password *</label>
        <input type="password" name="password_2" required="required">
    </div>
    <div class="input-group">
        <a href="/api/register">
            <button type="submit" class="btn" name="reg_user">
                Register
            </button>
        </a>
    </div>
     

    <p>
        Already have an account?
        <a href="/login">
            Login Here!
        </a>
    </p>


</form>
<%- include('footer'); -%>